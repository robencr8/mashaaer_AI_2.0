# Mashaaer Enhanced Project - Environment Variables Example
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:pass@host:5432/mashaaer

# Application Settings
DEFAULT_LANGUAGE=ar
DEBUG=false
ENABLE_FACIAL_RECOGNITION=false

# Service configurations
SPEECH_RECOGNITION_SERVICE=browser
TEXT_TO_SPEECH_SERVICE=elevenlabs

# Voice IDs for ElevenLabs
TTS_AR_DEFAULT_VOICE=your_arabic_voice_id
TTS_AR_MASCULINE_VOICE=your_arabic_masculine_voice_id
TTS_AR_FEMININE_VOICE=your_arabic_feminine_voice_id
TTS_EN_DEFAULT_VOICE=your_english_voice_id
TTS_EN_MASCULINE_VOICE=your_english_masculine_voice_id
TTS_EN_FEMININE_VOICE=your_english_feminine_voice_id

# AI Model Configuration
EMOTION_ANALYSIS_MODEL=mistral
AI_MODEL_PRIORITY=mistral,openai,anthropic,google,cohere
SESSION_SECRET=your_session_secret_here

# Endpoints
AI_MODEL_ENDPOINT=http://localhost:5000/api/ai/generate-response
EMOTION_EVENT_ENDPOINT=http://localhost:3000/emotion/update

# Voice configuration
DEFAULT_VOICE_ID=female_arabic_emotional
ENABLE_TTS=true

# User preferences
VOICE_TYPE=feminine
ADMIN_API_KEY=your_admin_api_key_here

# PayPal Configuration (if needed)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox

# Telegram Bot (if needed)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Development Settings
SKIP_PREFLIGHT_CHECK=true

# CORS Settings (for production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com